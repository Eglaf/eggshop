{# Men items in an UL. #}
{% macro menuItem(active, text, route) %}
    <li{% if active %} class="active"{% endif %}>
        <a href="{{ path(route) }}">
            {{ text }}
        </a>
    </li>
{% endmacro %}

{# Link to route. #}
{% macro button(route, label) %}
    <a href="{{ path(route) }}" class="btn btn-default button-on-top">{{ label }}</a>
{% endmacro %}

{# Link to URL. #}
{% macro buttonToUrl(url, label) %}
    <a href="{{ url }}" class="btn btn-default button-on-top">{{ label }}</a>
{% endmacro %}

{# Input comment #}
{% macro inputComment(text) %}
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10 input_comment">
        {{ text|raw }}
    </div>
{% endmacro %}

{# Address details #}
{% macro address(address, headText) %}
    <table class="table">
        <thead>
        <tr>
            <th colspan="2" class="text-center">{{ headText }}</th>
        </tr>
        </thead>
        <tbody>
        {% if address %}
            <tr>
                <td>{{ 'common.title'|trans }}</td>
                <td>{{ address.title }}</td>
            </tr>
            <tr>
                <td>{{ 'common.city'|trans }}</td>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <td>{{ 'common.zip_code'|trans }}</td>
                <td>{{ address.zipCode }}</td>
            </tr>
            <tr>
                <td>{{ 'common.street'|trans }}</td>
                <td>{{ address.street }}</td>
            </tr>
            <tr>
                <td>{{ 'common.house_number'|trans }}</td>
                <td>{{ address.houseNumber }}</td>
            </tr>
            <tr>
                <td>{{ 'common.door_bell'|trans }}</td>
                <td>{{ address.doorBell }}</td>
            </tr>
            <tr>
                <td>{{ 'common.floor'|trans }}</td>
                <td>{{ address.floor }}</td>
            </tr>
            <tr>
                <td>{{ 'common.door'|trans }}</td>
                <td>{{ address.door }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'message.info.no_address'|trans }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endmacro %}

{# Show some helper text of parameter. #}
{% macro parameterHelp(parameter) %}
    {% if parameter == 'admin-email' %}(Admin email címe){% endif %}
    {% if parameter == 'admin-phone' %}(Admin telefonszáma){% endif %}
    {% if parameter == 'minimum-order-price-to-deliver' %}(Minimum rendelés értéke kiszállításhoz){% endif %}
    {% if parameter == 'order-delivery-price' %}(Kiszállítási díj){% endif %}
    {% if parameter == 'order-no-delivery-price-above-sum' %}(Nincs kiszállítási díj efölött az összeg felett){% endif %}
    {% if parameter == 'order-sum-price' %}(Rendelés értéke){% endif %}
{% endmacro %}