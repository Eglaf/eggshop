{% extends 'admin/admin.html.twig' %}

{% import 'admin/macro.html.twig' as macro %}

{% form_theme formView 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}
    {% if file.id %}
        {{ 'page_title.admin.file.update'|trans({'%file%':file.label}) }}
    {% else %}
        {{ 'page_title.admin.file.create'|trans }}
    {% endif %}
    - {{ parent() }}
{% endblock %}

{% block adminMenu %}
    {% include 'admin/adminMenu.html.twig' with {activeMenu:'file'} %}
{% endblock %}

{% block buttons %}
    {{ macro.button('app_admin_content_file_list', 'back_to_list'|trans) }}
{% endblock %}

{% block contentTitle %}
    {% if file.id %}
        {{ 'page_title.admin.file.update'|trans({'%file%':file.label}) }}
    {% else %}
        {{ 'page_title.admin.file.create'|trans }}
    {% endif %}
{% endblock %}

{% block adminContent %}

    {% if file.storageName is not null and file.storageName is not empty %}
        <img src="{{ uploadsDir ~ file.storageName }}" class="product-select-image" />
    {% endif %}

    {{ form_start(formView) }}
    {{ form_widget(formView) }}
    {{ form_end(formView) }}

    <script type="text/javascript">
    </script>

{% endblock %}

{% block preScripts %}
    {{ parent() }}
{% endblock %}

{% block postScripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}