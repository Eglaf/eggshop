{% extends 'admin/admin.html.twig' %}

{% import 'admin/macro.html.twig' as macro %}

{% block title %}
    {{ 'admin.title.text.update'|trans({'%text%': text.code}) }} - {{ parent() }}
{% endblock %}

{% block adminMenu %}
    {% include 'admin/adminMenu.html.twig' with {activeMenu:'text'} %}
{% endblock %}

{% block buttons %}
    {{ macro.button('app_admin_content_text_list', 'admin.link.back_to_list'|trans) }}
{% endblock %}

{% block contentTitle %}
    {{ 'admin.title.text.update'|trans({'%text%': text.code}) }}
{% endblock %}

{% block adminContent %}

    {{ form_start(formView) }}
    {{ form_widget(formView) }}
    {{ form_end(formView) }}

    <script type="text/javascript">
    </script>

{% endblock %}

{% block preScripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('ckeditor/ckeditor.js') }}"></script>
{% endblock %}

{% block postScripts %}
    {{ parent() }}

    <script type="text/javascript">

        CKEDITOR.replace('text_text', {
            filebrowserBrowseUrl: '{{ path("app_admin_content_file_browse") }}',
            filebrowserUploadUrl: '{{ path("app_admin_content_file_upload") }}'
        });

    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}