{% extends 'admin/admin.html.twig' %}

{% import 'admin/macro.html.twig' as macro %}

{% block title %}
    {% if product.id %}
        {{ 'admin.title.product.update'|trans({'%product%':product.label}) }}
    {% else %}
        {{ 'admin.title.product.create'|trans }}
    {% endif %}
    - {{ parent() }}
{% endblock %}

{% block adminMenu %}
    {% include 'admin/adminMenu.html.twig' with {activeMenu:'product'} %}
{% endblock %}

{% block buttons %}
    {{ macro.button('app_admin_simpleshop_product_list', 'admin.link.back_to_list'|trans) }}
    {% if product.id %}
        {{ macro.buttonToUrl(path('app_admin_simpleshop_product_selectimagelist', {product: product.id}), 'admin.link.product.select_image'|trans) }}
    {% endif %}
{% endblock %}

{% block contentTitle %}
    {% if product.id %}
        {{ 'admin.title.product.update'|trans({'%product%':product.label}) }}
    {% else %}
        {{ 'admin.title.product.create'|trans }}
    {% endif %}
{% endblock %}

{% block adminContent %}

    {{ form_start(formView) }}
    {{ form_widget(formView) }}
    {{ form_end(formView) }}

    <script type="text/javascript">
    </script>

{% endblock %}

{% block preScripts %}
    {{ parent() }}
{% endblock %}

{% block postScripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}