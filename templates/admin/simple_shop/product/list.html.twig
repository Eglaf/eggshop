{% extends 'admin/admin.html.twig' %}

{% import 'admin/macro.html.twig' as macro %}

{% block title %}
    {{ 'admin.title.product.list'|trans }} - {{ parent() }}
{% endblock %}

{% block adminMenu %}
    {% include 'admin/adminMenu.html.twig' with {activeMenu:'product'} %}
{% endblock %}

{% block buttons %}
    {{ macro.button('app_admin_simpleshop_product_create', 'admin.link.to_create'|trans) }}
{% endblock %}

{% block contentTitle %}
    {{ 'admin.title.product.list'|trans }}
{% endblock %}

{% block adminContent %}
    {# Template for egf table. #}
    {% include 'admin/js-templates/egf-table-template.html' %}
    {% include 'admin/js-templates/egf-table-row-template.html' %}
    {% include 'admin/js-templates/egf-pagination-template.html' %}


    {# Content #}
    <div id="table-container"></div>
{% endblock %}

{% block preScripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/egf/egf-table.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/egf/egf-pagination.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/egf/egf-sf-route.js') }}"></script>
{% endblock %}

{% block postScripts %}
    {{ parent() }}
    <script type="text/javascript">
        new Egf.Table()
            .setContainerElemId('table-container')
            .setContents(JSON.parse('{{ listAsJson|raw }}'))
            .setConfig({
                sortByColumnKey: 0,
                sortByReversed:  false,
                rowsOnPage:      5
            })
            .setTranslations({
                globalSearchPlaceholder: '{{ "site.common.search"|trans }}'
            })
            .setColumns([{
                text:     '{{ "admin.label.common.label"|trans }}',
                property: 'label',
                search:   'string',
                sort:     true
            }, {
                text: '{{ "admin.label.common.active"|trans }}',
                func: function (row) {
                    return Egf.Util.boolVal(row.active) ? '{{ "admin.label.common.active"|trans }}' : '{{ "admin.label.common.inactive"|trans }}';
                },
                sort: function (row) {
                    // On sorting, put active first.
                    return (row.active ? 1 : 2);
                }
            }, {
                text: '{{ "admin.label.product.category"|trans }}',
                func: function (row) {
                    return row.category.label;
                },
                sort: true
            }, {
                text: '{{ "admin.label.product.price"|trans }}',
                func: function (row) {
                    return row.price + ' {{ "site.common.price_short"|trans }}';
                }
            }, {
                text: '',
                func: function (row) {
                    var url = new Egf.Sf.Route()
                        .setRoute('{{ path('app_admin_simpleshop_product_update', {'product':'_id_'}) }}')
                        .setParams({
                            '_id_': row.id
                        })
                        .getUrl();

                    return "<a href='" + url + "' class='btn btn-default'>{{ 'admin.link.to_update'|trans }}</a>";
                }
            }, {
                text: '',
                func: function (row) {
                    var url = new Egf.Sf.Route()
                        .setRoute('{{ path('app_admin_simpleshop_product_selectimagelist', {'product':'_id_'}) }}')
                        .setParams({
                            '_id_': row.id
                        })
                        .getUrl();

                    return "<a href='" + url + "' class='btn btn-default'>{{ 'admin.link.product.select_image'|trans }}</a>";
                }
            }])
            .init();
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}