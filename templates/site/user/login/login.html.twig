{% extends 'site/site.html.twig' %}

{% block title %}
    {{ 'page_title.site.login'|trans }} - {{ parent() }}
{% endblock %}

{% block siteContent %}

    <h1>{{ 'page_title.site.login'|trans }}</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_site_user_login_login') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">
                {{ 'common.email'|trans }}
            </label>
            <div class="col-sm-10">
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">
                {{ 'common.password'|trans }}
            </label>
            <div class="col-sm-10">
                <input type="password" id="password" name="_password" class="form-control" />
            </div>
        </div>

        <input type="hidden" name="_target_path" value="{{ path('app_site_content_page_index') }}" />

        <div class="form-group">
            <label for="password" class="col-sm-2 control-label"></label>
            <div class="col-sm-5">
            <button type="submit" class="btn btn-default">
                {{ 'common.login'|trans }}
            </button>
            </div>
            <div class="col-sm-5 text-right">
                <a href="{{ path('app_site_user_forgottenpassword_askemailform') }}">{{ 'form.login.forgot_password'|trans }}</a>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10 no_user_to_registration">
                {{ 'form.user.no_user_yet'|trans }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <a href="{{ path('app_site_user_registration_registration') }}" class="btn btn-default">
                    {{ 'common.registration'|trans }}
                </a>
            </div>
        </div>

    </form>

{% endblock %}