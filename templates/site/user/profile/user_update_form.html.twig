{% extends 'site/site.html.twig' %}

{% form_theme formView 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}
    {{ 'site.title.profile.user_update'|trans }}
    - {{ parent() }}
{% endblock %}

{% block siteContent %}

    <h1>{{ 'site.title.profile.user_update'|trans }}</h1>

    {{ form_start(formView) }}

    {{ form_errors(formView) }}

    {{ form_row(formView.name) }}
    {{ form_row(formView.email) }}
    <hr />
    {{ form_row(formView.plainPassword) }}
    <hr />
    {{ form_row(formView.oldPassword) }}
    <div class="input_comment">
        {{'site.form.profile.comment.old_password'|trans }}
    </div>

    {{ form_end(formView) }}

    <br />
    <a href="{{ path('app_site_user_profile_main') }}" class="btn btn-default">
        {{ 'site.common.back'|trans }}
    </a>

    <script type="text/javascript">
    </script>

{% endblock %}

{% block preScripts %}
    {{ parent() }}
{% endblock %}

{% block postScripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}