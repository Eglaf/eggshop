{% extends 'site/site.html.twig' %}

{% block title %}
    {{ 'page_title.site.profile.earlier_order_details'|trans }} - {{ parent() }}
{% endblock %}

{% block siteContent %}

    <h1>{{ 'page_title.site.profile.earlier_order_details'|trans }}</h1>
    <br/>

    <table class="table">
        <tr>
            <td>{{ 'id'|trans }}</td>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <td>{{ 'date'|trans }}</td>
            <td>{{ order.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <td>{{ 'status'|trans }}</td>
            <td>{{ order.status.label }}</td>
        </tr>
        <tr>
            <td colspan="2">{{ 'products'|trans }}</td>
        </tr>
        <tr>
            <td colspan="2">

                {% set sumPrice = 0 %}

                <table class="earlier-orders-inner-table">
                    <thead>
                    <tr>
                        <th>{{ 'product'|trans }}</th>
                        <th>{{ 'quantity'|trans }}</th>
                        <th>{{ 'price'|trans }}</th>
                        <th>{{ 'sum_total'|trans }}</th>
                    </tr>
                    </thead>
                    {% for item in order.items %}
                        {% set price = item.price ? item.price : item.product.price %}
                        {% set rowPrice = price * item.count %}
                        {% set sumPrice = sumPrice + rowPrice %}

                        <tr>
                            <td>{{ item.product.label }}</td>
                            <td>{{ item.count }} {{ 'quantity_short'|trans }}</td>
                            <td>{{ price }} {{ 'currency_short'|trans }}</td>
                            <td>{{ rowPrice }} {{ 'currency_short'|trans }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
        </tr>

        {% if order.deliveryAddress and sumPrice < noDeliveryPriceAbove %}
            <tr>
                <td>{{ 'delivery_price'|trans }}</td>
                <td>{{ deliveryPrice }} {{ 'currency_short'|trans }}</td>
            </tr>
        {% endif %}
        <tr>
            <td>{{ 'sum_total'|trans }}</td>
            <td>{{ order.priceSum }} {{ 'currency_short'|trans }}</td>
        </tr>
    </table>

    <a href="{{ path('app_site_user_profile_earlierorders') }}" class="btn btn-default">
        {{ 'back_to_list'|trans }}
    </a>

{% endblock %}
